<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <size
                        android:width="22dp"
                        android:height="22dp" />
                </shape>
            </item>
            <item
                android:width="6dp"
                android:height="2dp"
                android:top="14dp"
                android:left="3dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#777"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="14dp"
                android:height="2dp"
                android:top="10dp"
                android:left="6dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#777"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
